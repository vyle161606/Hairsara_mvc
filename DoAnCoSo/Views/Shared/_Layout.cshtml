<script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<script>
    $(function () {
        var chat = $.connection.chatHub;
        var chatWidgetIcon = $('#chat-widget-icon');
        var chatWidget1 = $('#chat-widget-1');
        var chatWidget2 = $('#chat-widget-2');
        var chatWidgetClose1 = $('#chat-widget-close-1');
        var chatWidgetClose2 = $('#chat-widget-close-2');
        var nameInput = $('#name-input');
        var phoneInput = $('#phone-input');
        var messageInput = $('#message-input');
        var senderName = $('.sender');
        var welcomeName = $('#welcome-name');

        chat.client.addNewMessageToPage = function (name, message) {
            var sender = name.trim() !== "" ? name : "User";
            var senderAvatar = "https://www.phplivesupport.com/pics/icons/avatars/public/avatar_71.png";

            var messageHtml = '<p class="chat-widget-message">' +
                '<span class="sender"><img src="' + senderAvatar + '" title="' + sender + '"></span>' +
                '<span class="message-text">' + htmlEncode(message) + '</span>' +
                '</p>';

            $('#chat-widget-2 .chat-widget-body').append(messageHtml);
            $('#chat-widget-2 .chat-widget-body').scrollTop($('#chat-widget-2 .chat-widget-body')[0].scrollHeight);
        };

        $('#submit-button').click(function () {
            var name = nameInput.val();
            var phone = phoneInput.val();

            if (name && phone) {
                chatWidget1.hide();
                chatWidget2.show();
                welcomeName.text(name);
            } else {
                alert("Please enter your name and phone.");
                return; // Thoát khỏi sự kiện nếu thiếu thông tin
            }

        });

        $('#send-button').click(function () {
            var message = messageInput.val();

            if (message) {
                chat.server.send(nameInput.val(), message, phoneInput.val());
                messageInput.val('').focus();
            } else {
                alert("Please enter a message.");
            }
        });


        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }

        $.connection.hub.start().done(function () {
            chatWidgetIcon.click(function () {
                chatWidget1.slideToggle();
            });

            chatWidgetClose1.click(function () {
                chatWidget1.slideUp();
            });

            chatWidgetClose2.click(function () {
                chatWidget2.slideUp();
            });
        });
    });

</script>
