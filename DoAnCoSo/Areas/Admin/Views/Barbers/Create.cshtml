@model DoAnCoSo.Models.Barbers

@using (Html.BeginForm("Create", "Barbers", FormMethod.Post, new { id = "addRowForm", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h3>Thêm Thợ Cắt Tóc</h3>
        <h5>Nhập Thông Tin Thợ Cắt Tóc Cần Thêm</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h3>Tên Thợ Cắt Tóc</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.BarberName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BarberName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h3>Ảnh Thợ Cắt Tóc</h3>
            <div class="col-md-10">
                <input type="file" name="imageFile" id="imageFile" class="form-control" />
                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h3>Mô Tả Thợ Cắt Tóc</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="modal-footer no-bd">
            <button type="submit" id="addRowButton" class="btn btn-primary">Thêm</button>
            <button type="button" class="btn btn-danger" data-dismiss="modal">Thoát</button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
