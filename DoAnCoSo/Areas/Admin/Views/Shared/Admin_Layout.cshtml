    <title>@ViewBag.title</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
    <link rel="icon" href="~/Areas/Admin/content/img/icon.ico" type="image/x-icon" />
    <link href="~/Areas/Admin/content/css/fonts.css" rel="stylesheet" />
