@model DoAnCoSo.Models.RegisterViewModel
@{
    ViewBag.Title = "Create";
}
@using (Html.BeginForm("Create", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <span>Tên Tài Khoản</span>
        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.UserName)
    </div>

    <div class="form-group">
        <span>Mật Khẩu</span>
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", value = Model.Password })
        @Html.ValidationMessageFor(model => model.Password)
    </div>

    <div class="form-group">
        <span>Nhập Lại Mật Khẩu</span>
        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", value = Model.ConfirmPassword })
        @Html.ValidationMessageFor(model => model.ConfirmPassword)
    </div>

    <div class="form-group">
        <span>Email Liên Lạc</span>
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Email)
    </div>

    <div class="form-group">
        <span>Số Điện Thoại</span>
        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.PhoneNumber)
    </div>
    
    <div class="form-group">
        <span>Chọn quyền</span>
        @Html.DropDownListFor(model => model.SelectedRole, (SelectList)ViewData["RoleList"], "-- Select Role --", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.SelectedRole)
    </div>

    <button type="submit" class="btn btn-primary">Tạo</button>
}
